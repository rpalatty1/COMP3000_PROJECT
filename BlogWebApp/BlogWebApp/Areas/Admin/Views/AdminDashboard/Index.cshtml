@{
}

<h1>Admin Dashboard</h1>
<div class="container-fluid py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">Home</li>
        </ol>
    </nav>
    <div class="row my-4">
        <div class="col-12 col-md-6 col-lg-3 mb-4 m-lg-0">
            <div class="card">
                <h5 class="card-header">Total Authors</h5>
                <div class="card-body">
                    <h5 class="card-title"></h5>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-3 mb-4 m-lg-0">
            <div class="card">
                <h5 class="card-header">Total Blogs</h5>
                <div class="card-body">
                    <h5 class="card-title">
                        <h4>@ViewBag.BlogCount</h4>
                    </h5>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-3 mb-4 m-lg-0">
            <div class="card">
                <h5 class="card-header">Total Category</h5>
                <div class="card-body">
                    <h5 class="card-title">
                        <h4>@ViewBag.CategoryCount</h4>
                    </h5>
                </div>
            </div>
        </div>
    </div>

</div>

<div class="row">
    <div class="col-12 col-xl-12 mb-4 mb-lg-0">
        <div class="card">
            <h5 class="card-header">Top 5 Blogs</h5>
            <div =class="card-body">

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CreatedDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CreatedBy)
                            </th>
                            @*<th>
                                Views
                            </th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                        <tr>
                            <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                    @Html.DisplayFor(modelItem => item.CreatedDate)
                            </td>
                            <td>
                                    @Html.DisplayFor(modelItem => item.ApplicationUser.FirstName)
                            </td>
                            @*<td>
                                100
                            </td>*@
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>